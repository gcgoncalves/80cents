body
  .margin-top
    margin-top                          : SPACE
  .margin-right
    margin-right                        : SPACE
  .margin-bottom
    margin-bottom                       : SPACE
  .margin-left
    margin-left                         : SPACE

  figure
    background-size                     : cover

  > article
    &.slideshow
      position                          : relative
      min-height                        : 40vh
      margin-top                        : HEADER_HEIGHT
      color                             : WHITE
      background-color                  : darken(BACKGROUND, 50%)
      background-size                   : cover
      background-image                  : url("/img/background.jpg")
      > *
        color                           : WHITE !important
        margin                          : 0
      > :not(div)
        z-index                         : 1
      > h2
        margin                          : 0
        font-size                       : U
        font-weight                     : FONT_WEIGHT_BOLD
        text-transform                  : Uppercase
        text-align                      : center
        border-bottom                   : solid 2px rgba(255,255,255,0.75)
      > *:not(h2)
        font-weight                     : FONT_WEIGHT_NORMAL
        opacity                         : 0.75
      > .overlay
        z-index                         : 0
        position                        : absolute
        left                            : 0
        width                           : 100%
        top                             : 0
        height                          : 100%
        background                      : url("/img/overlay.png") repeat 0 0

    &:not(.slideshow)
      padding                           : U 0

    h3
      text-align                        : center
      &.margin-top
        margin-top                      : U
      &:before, &:after
        content                         : ""
        margin                          : (SPACE / 2) SPACE
        display                         : inline-block
        width                           : U
        height                          : (SPACE / 6)
        background-color                : COLOR
        opacity                         : 0.85

    .box
      box-shadow                          0 0 0 1px BOX
      border-radius                     : BORDER_RADIUS
      // -- Title
      > h1, >h2
        margin-bottom                   : 0
        font-size                       : 150%
        font-weight                     : FONT_WEIGHT_BOLD
        text-transform                  : Uppercase
      &.text
        padding                         : (2 * SPACE)
        > *
          display                       : block
      &:not(.text)
        padding                         : SPACE

  // -- Product list
  [data-shopio=products]
    > a
      SIZE                              = 23.5vw
      margin                            : 1vw 0.5vw
      > figure
        margin                          : 0 0 SPACE 0
        width                           : SIZE
        height                          : SIZE
        display-flex()
        justify-content                   center
        align-content                     center
        align-items                       center
        &, > *
          transition                      all TRANSITION_DURATION
        > button
          background-color              : COLOR
          color                         : WHITE
          opacity                       : 0
          transform                       translateY(100%)
          &:hover
            background-color            : THEME
      > div
        > .uppercase
          text-transform                : Uppercase
        > strong
          margin                        : 0 0 (SPACE / 3) 0
          font-size                     : FONT_SIZE_BIG
          font-weight                   : FONT_WEIGHT_BOLD
          color                         : COLOR
        > small
          font-size                     : FONT_SIZE_TINY
          line-height                   : FONT_SIZE_TINY
          color                         : THEME
      &:hover
        > figure
          box-shadow                      inset 0 0 0 100rem alpha(WHITE, 35%)
          > button
            opacity                     : 1
            transform                     translateY(0%)

      &.highlight
        width                           : SIZE = 32vw
        min-height                      : SIZE
        box-shadow                      : inset 0 0 0 100rem alpha(COLOR, 50%)
        background-position             : 50% 50%
        > div
          > strong
            color                       : WHITE
            font-size                   : (U / 2)
            line-height                 : (U / 1.5)
            text-shadow                 : 0 0 SPACE rgba(0,0,0,0.25)
            box-shadow                  : 0 2px rgba(255,255,255,0.75)
          > span
            font-weight                 : FONT_WEIGHT_NORMAL
            opacity                     : 0.75
            padding                     : (SPACE / 2) SPACE
        &:hover
          > *
            text-shadow                 : 0 0 SPACE rgba(0,0,0,0.5)


  [data-shopio-collection], [data-shopio-product]
    transition                            all ANIMATION_DURATION ANIMATION_EASE
    &:not(.active)
      opacity                           : 0
      transform                           translateY(50%)
    &.active
      opacity                           : 1
      transform                           translateY(0%)

@media screen and (max-device-width: 480px)
  body
    .margin-top
      margin-top                        : (U / 2.5) !important
    .box
      padding                           : 0 !important
      box-shadow                          none !important
      border-radius                     : 0 !important

    h2
      font-size                         : SIZE = (U / 1.7) !important
      max-width                         : 90%
    h3
      font-size                         : (1.5 * FONT_SIZE_NORMAL) !important
      margin-bottom                     : (U / 2.5)
      &:before, &:after
        width                           : (U / 2) !important
    h5
      font-size                         : FONT_SIZE_BIG
      margin-bottom                     : (SPACE / 4)

    > article
      &.slideshow
        margin-top                      : 0
        min-height                      : 50vh
        padding                         : 0 SPACE
      &:not(.slideshow)
        padding                         : (U / 2) 0

    [data-shopio=products]
      SIZE                              = 100vw
      margin                            : 0
      > a
        position                        : relative
        margin                          : 0
        > figure
          width                         : SIZE
          height                        : SIZE
          margin-bottom                 : 0
          > button
            display                     : none
        &.highlight
          width                         : SIZE
          min-height                    : SIZE
