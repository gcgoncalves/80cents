// -- MEDIAQUERIES -------------------------------------------------------------
@media (min-width: 1200px)
  .container
    max-width                 : 1200px

// -- BASE ---------------------------------------------------------------------
body
  font-family                 : FONT_FAMILY
  font-size                   : FONT_SIZE
  color                       : COLOR
  background-color            : WHITE

  .container
    overflow                  : hidden

// -- LINK ---------------------------------------------------------------------
a
  text-decoration             : none
  color                       : COLOR
  &:hover, &:active
    color                     : THEME

// -- BUTTON -------------------------------------------------------------------
.button, button, input[type="submit"], input[type="reset"], input[type="button"]
  font-weight                 : bold
  text-transform              : uppercase
  letter-spacing              : .1rem
  color                       : lighten(COLOR, 50%)
  border                      : none
  border-radius               : BORDER_RADIUS
  margin-bottom               : 0
  &.big
    padding                   : (SPACE / 2) (SPACE * 2)
    height                    : auto
    font-size                 : FONT_SIZE_SMALL
  &.anchor
    width                     : 100%
  &:not([disabled])
    &:hover, &:focus
      color                   : darken(BACKGROUND, 75%)
      border-color            : darken(BACKGROUND, 75%)
    &.primary
      color                   : WHITE
      background-color        : THEME
      border-color            : darken(THEME, 5%)
      &:hover, &:focus
        color                 : WHITE
        background-color      : darken(THEME, 10%)
        border-color          : darken(THEME, 15%)
  &[disabled]
    color                     : lighten(BACKGROUND, 75%)
    background-color          : BOX

// -- FORM ---------------------------------------------------------------------
input[type="email"], input[type="search"], input[type="text"], input[type="tel"],
input[type="url"], input[type="password"], textarea, select
  background-color            : WHITE
  border                      : 1px solid BOX
  border-radius               : BORDER_RADIUS
  &:focus
    border                    : 1px solid darken(BACKGROUND, 30%)

// -- TABLE --------------------------------------------------------------------
table
  td, th
    &.center
      text-align              : center
    &.right
      text-align              : right
  th, td
    border-bottom             : 1px solid BOX
  th
    font-size                 : FONT_SIZE_TINY
    color                     : LABEL
    padding                   : (SPACE / 2) SPACE
  td
    padding                   : SPACE
  tr:last-child td
    border-bottom             : none
